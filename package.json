{
  "name": "safedlbuddy",
  "version": "0.1.0",
  "private": true,
  "description": "SafeDLBuddy: AI-powered safe download and multi-AV scanning with Playwright, Cloudmersive, Bytescale, and ClamAV.",
  "type": "module",
  "main": "dist/server.js",
  "bin": {
    "safedlbuddy": "dist/cli.js"
  },
  "scripts": {
    "dev": "tsx src/server.ts",
    "cli": "tsx src/cli.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/server.js",
    "playwright": "playwright install --with-deps",
    "postinstall": "playwright install --with-deps || true"
  },
  "keywords": [
    "playwright",
    "antivirus",
    "cloudmersive",
    "bytescale",
    "clamav",
    "security",
    "openai"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.18"
  },
  "dependencies": {
    "axios": "^1.7.7",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "form-data": "^4.0.0",
    "openai": "^4.60.1",
    "playwright": "^1.47.2",
    "tmp": "^0.2.3",
    "clamscan": "^2.4.0",
    "zod": "^3.23.8",
    "file-type": "^16.5.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^22.7.4",
    "@types/tmp": "^0.2.6",
    "@types/form-data": "^2.5.0",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2"
  }
}

